<div class="bg-[#f7f7f7] py-14 md:py-20 border-b border-gray-100">
  <div class="page-width">
    <div class="text-center mb-8 md:mb-12">
      <h2 class="text-2xl md:text-4xl font-bold my-0">
        {{ section.settings.heading }}
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-12">
      {% for block in section.blocks %}
        <div class="flex md:flex-col gap-4 items-center text-center group" {{ block.shopify_attributes }}>
          <div class="p-4 rounded-full bg-white group-hover:bg-primary transition-colors duration-300 flex items-center justify-center">
            {% if block.settings.icon_image != blank %}
              <img
                src="{{ block.settings.icon_image | image_url: width: 96 }}"
                alt="{{ block.settings.title | escape }}"
                width="80"
                height="80"
                class="transition duration-300 group-hover:invert"
                loading="lazy">
            {% endif %}
          </div>
          <div class="text-left md:text-center">
            <h3 class="font-bold text-xl md:text-2xl mb-3 mt-0">
              {{ block.settings.title }}
            </h3>
            <p class="text-gray-500 text-lg max-w-[250px] leading-relaxed mt-0">
              {{ block.settings.description }}
            </p>
          </div>
        </div>
      {% endfor %}
    </div>

  </div>
</div>

{% schema %}
  {
    "name": "Bigger Than A Shave",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Section Heading",
        "default": "Bigger Than A Shave"
      }
    ],
    "blocks": [
      {
        "type": "feature",
        "name": "Feature Item",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon_image",
            "label": "Icon Image"
          }, {
            "type": "text",
            "id": "title",
            "label": "Title"
          }, {
            "type": "textarea",
            "id": "description",
            "label": "Description"
          }
        ]
      }
    ],
    "max_blocks": 3,
    "presets": [
      {
        "name": "Bigger Than A Shave"
      }
    ]
  }
{% endschema %}