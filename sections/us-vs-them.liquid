<div class="bg-[#f5f2ed] py-24 relative overflow-hidden">
  <div class="page-width">

    <div class="text-center mb-8">
      <h2 class="text-2xl md:text-4xl font-bold mb-4 mt-0">
        {{ section.settings.heading }}
      </h2>
      <p class="text-gray-600 font-medium">
        {{ section.settings.subheading }}
      </p>
    </div>

    <div class="max-w-3xl mx-auto">
      <div class="grid grid-cols-2 border-2 border-solid border-[#152031]">
      <div class="text-center p-4 border-0 border-r-2 border-solid border-[#152031]">
        <h4 class="font-black text-2xl uppercase my-0">DutyBlade</h4>
        <p class="text-xs uppercase tracking-[0.3em] text-gray-600 mt-2 mb-0">$21 Veteran-Owned</p>
      </div>
      <div class="text-center p-4">
        <h4 class="font-black text-2xl uppercase my-0">Corporate</h4>
        <p class="text-xs uppercase tracking-[0.3em] text-gray-600 mt-2 mb-0">$35+ Mass-Market</p>
      </div>
    </div>
    {% for block in section.blocks %}
      <div class="grid grid-cols-2 border-2 border-solid border-[#152031] border-t-0">
        <div class="p-4 border-0 border-r-2 border-solid border-[#152031] flex items-center gap-4">
          <div class="bg-green-500/20 p-1 rounded-full size-8 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 6 9 17l-5-5"></path>
            </svg>
          </div>
          {{ block.settings.us_text }}
        </div>
        <div class="p-4 flex items-center gap-4">
          <div class="bg-red-100 text-red-600 p-1 rounded-full size-8 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M18 6 6 18"></path>
              <path d="m6 6 12 12"></path>
            </svg>
          </div>
          {{ block.settings.them_text }}
        </div>
      </div>
    {% endfor %}
    </div>

    {% if section.settings.cta_link != blank %}
      <div class="mt-12 text-center">
        <a href="{{ section.settings.cta_link }}" class="button">
          {{ section.settings.cta_text }}
        </a>
      </div>
    {% endif %}

  </div>
</div>

{% schema %}
{
  "name": "Us vs Them Comparison",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Us vs Them"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "The standard you walk past is the standard you accept."
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Upgrade Your Ritual Today"
    }
  ],
  "blocks": [
    {
      "type": "comparison_row",
      "name": "Comparison Row",
      "settings": [
        {
          "type": "text",
          "id": "us_text",
          "label": "Us (DutyBlade)"
        },
        {
          "type": "text",
          "id": "them_text",
          "label": "Them (Corporate)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Us vs Them",
      "blocks": [
        {
          "type": "comparison_row",
          "settings": {
            "us_text": "Premium Safety Razor",
            "them_text": "Plastic Cartridge Razor"
          }
        },
        {
          "type": "comparison_row",
          "settings": {
            "us_text": "High-Quality Stainless Blades",
            "them_text": "Expensive Disposable Refills"
          }
        },
        {
          "type": "comparison_row",
          "settings": {
            "us_text": "Traditional Shaving Soap",
            "them_text": "Chemical-Filled Gel"
          }
        },
        {
          "type": "comparison_row",
          "settings": {
            "us_text": "Veteran-Owned & Operated",
            "them_text": "Corporate Mass Production"
          }
        },
        {
          "type": "comparison_row",
          "settings": {
            "us_text": "Lifetime Warranty",
            "them_text": "Planned Obsolescence"
          }
        }
      ]
    }
  ]
}
{% endschema %}
