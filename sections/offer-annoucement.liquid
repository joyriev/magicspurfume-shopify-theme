<div class="py-2" style="background-color: {{ section.settings.background_color }};">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-center">
      {% if section.settings.link != blank %}
        <a href="{{ section.settings.link }}" class="text-white font-medium no-underline flex items-center text-nowrap text-sm md:text-base">
          {{ section.settings.prepend_text }}
          <span class="text-white inline-block mx-2 font-bold bg-green-700 px-2 py-0.5 rounded [transform:rotate(-3deg)]" style="background-color: {{ section.settings.background_color_2 }};">{{ section.settings.link_text }}</span>
          {{ section.settings.append_text }}
        </a>
      {% else %}
        <div class="text-white font-medium flex items-center text-nowrap text-sm md:text-base">
          {{ section.settings.prepend_text }}
          <span class="text-white inline-block mx-2 font-bold bg-green-700 px-2 py-0.5 rounded [transform:rotate(-3deg)]" style="background-color: {{ section.settings.background_color_2 }};">{{ section.settings.link_text }}</span>
          {{ section.settings.append_text }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Offer Announcement",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#15803d"
      },
      {
        "type": "color",
        "id": "background_color_2",
        "label": "Background Color 2",
        "default": "#15803d"
      },
      {
        "type": "text",
        "id": "prepend_text",
        "label": "Prepend Text",
        "default": "Exclusive Offer"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link Text",
        "default": "Buy 1 Get 1 Free!"
      }, {
        "type": "text",
        "id": "append_text",
        "label": "Append Text",
        "default": "Shop Now ðŸ‘‰"
      }, {
        "type": "url",
        "id": "link",
        "label": "Link"
      }
    ],
    "presets": [
      {
        "name": "Offer Announcement"
      }
    ]
  }
{% endschema %}